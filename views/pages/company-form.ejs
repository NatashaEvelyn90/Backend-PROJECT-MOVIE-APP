<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">
        <h2 class="text-center text-capitalize">Know of a Company? Add it below!</h2>
        <form 
            action="http://localhost:8064/api/company/create"
            method="post"
            class="form" 
            id="companyForm"
        >
        <div class="row mb-3">
            <div class="col">
                <label for="production" class="form-label">
                    Name of Company:
                </label>
                <input 
                    type="text" 
                    id="production" 
                    name="production" 
                    class="form-control">
            </div>
        </div>

    
        <button 
            class="btn btn-primary" 
            type="submit" 
            role="button">Add Company</button>
        </form>
        <p class="text-end"><a href="/">Return Home</a></p>
    </div>
</main>

<%- include('../partials/footer') %>